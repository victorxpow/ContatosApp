<%= form_with model: @customer, local: true do |f| %>
  <div class="container" style="margin-top:20px;">
    <div class="row">
      <div class="col-xs-6">
          <h3 class="text-center">Selecionar Contatos</h3>
          <div class="well" style="max-height: 300px;overflow: auto;">
            <ul id="check-list-box" class="list-group checked-list-box">
            <%= f.collection_check_boxes :contact_ids, Contact.order(:name), :id, :name do |b|%>
                <li class="list-group-item" data-color="success">
                  <%= b.check_box %>
                  <%= b.label %>
                </li>
            </ul>
            <% end %>
            <br />
              <%= f.submit 'Confirmar', class:"btn btn-primary col-xs-12"  %>
          </div>
          <pre id="display-json"></pre>
      </div>
    </div>
  </div>
<% end %>
